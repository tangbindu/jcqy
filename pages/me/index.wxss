
.container{
  padding-top: 20rpx;
  padding-bottom: 60rpx;
}

.gap{
  padding-right: 15rpx;
}
/* table-title-wrap*/
.table-title-wrap{
  position: relative;
  z-index: 3;
  flex:1;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  height: 40rpx;
  display: flex;
  margin-bottom: -1px;
  margin-left: -2rpx;
}
.table-title{
  position: relative;
  display: flex;
  z-index: 2;
  padding:0 10rpx;
  padding-right: 10px;
  height: 40rpx;
  line-height: 40rpx;
}
/* table  */
.table{
  position: relative;
  z-index: 1;
  width: 710rpx;
  margin-bottom: 15rpx;
  margin-top: -2rpx;
}
.th{
  display:flex;
  padding-top: 1rpx;
}
.tb{
  position: relative;
  padding-top:40rpx;
  display:flex;
}
.thd{
  font-size: 24rpx;
  height: 68rpx;
  background-color: #e9e9e1;
}
.td{
  color: #333;
  font-size: 24rpx;
}
.thd,.td{
  flex:1;
  display:flex;
  align-items: center;
  justify-content: center;
  border: .5rpx solid #e9e9e1;
  margin-left:-.5rpx;
  margin-top:-.5rpx;
  padding:6rpx 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.td{
  height: 60rpx;
}
.table-thd-disabled,.table-td-disabled{
  color: #cccccc;
}
/* table  */
.matchid{
  width: 70rpx;
  flex:auto
}
.ballNum{
  width: 150rpx;
  flex:auto
}
.fixInfo{
  position: absolute;
  top: 10rpx;
  left: 0;
  width: 100%;
  text-align: center;
  font-size: 20rpx;
  color: darkgray;
}
.th-end{
  margin-top: 40rpx;
}
.thd-end{
  margin:10rpx 0;
  /* background-color: #e9e9e1; */
  height: 40rpx;
  line-height: 40rpx;
  text-align: left;
  padding:0 10rpx;
  font-size: 28rpx;
}

.ballNum{
  display: flex;
  flex-direction: row;
  padding-left: 10rpx;
}
.ball{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 48rpx;
  height: 48rpx;
  padding: 0rpx !important;
  background-color: lightgrey;
  border-radius: 48rpx;
  margin-right:10rpx
}
.ball-type1{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 88rpx;
  height: 48rpx;
  /* border-color: lightgrey;
  border-style: dotted;
  border-width: 1rpx; */
  border-radius: 10rpx;
  margin-right:10rpx;
  margin-top:20rpx
}
.ball-active{
  background-color: tomato;
  color: #ffffff;
}
.ball-num{
  font-size: 32rpx;
  text-align: center;
}
.ball-num-type1{
  display: flex;
  flex-direction: row;
  font-size: 36rpx;
  text-align: center;
  color: tomato;
}
.ball-odd{
  font-size: 16rpx;
  text-align: center;
}
.ballNum{
  display: flex;
  flex-direction: row;
}
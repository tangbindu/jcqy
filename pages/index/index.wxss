@import "../../static/wxss/common.wxss";

.gap_r{
  margin-right: 5rpx;
}
/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200rpx;
}


/* table-title-wrap*/
.table{
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0 0 10px #d3e1f4;
  margin-left: 20rpx;
}
.table-title-wrap{
  position: relative;
  z-index: 3;
  flex:1;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  height: 58rpx;
  display: flex;
  border-bottom: 1px dashed #eaeff5;
  margin-bottom: 15rpx;

}
.table-title{
  position: relative;
  display: flex;
  z-index: 2;
  height: 58rpx;
  line-height: 58rpx;
  font-size: 24rpx;
  color: #27263d;
  /* background-color: #fff4dc; */
  /* background: linear-gradient(to bottom, #fff4dc , #fff4dc); */
}
.table-title-disabled{
  color: #c4cdd9;
  /* background-color: #f2f2f2; */
}

.table-title-ing{
  color: #52d41b;
}

.matchName{
  background-color: #0bba70;
  color: #ffffff;
  height: 38rpx;
  line-height: 38rpx;
  text-align: left;
  border-radius: 5rpx;
  margin:10rpx;
  text-align: center;
  padding:0 10rpx;
}
.matchName-disabled{
  color: #c4cdd9;
  background-color: #eaf0f5;
}

/* table  */
.table{
  position: relative;
  z-index: 1;
  width: 710rpx;
  margin-bottom: 20rpx;
  margin-top: -2rpx;
}
.th{
  display:flex;
  padding-top: 1rpx;
  padding-left: 5px;
}
.tb{
  padding-left: 5px;
  display:flex;
  padding-top: 1rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}
.thd{
  font-size: 26rpx;
  color: #ffffff;
  background-color:#99a7ba;
  border-radius:50rpx;
  height:54rpx;
  width:54rpx;
}
.thd-hit{
  color: #27263d !important;
  background-color:transparent;
  background-image: url("https://tangbindu.github.io/static/ball.png");
  background-size: contain;
  background-repeat: no-repeat;
  font-weight: bold;
}
.td-hit{
  color: #27263d !important;
  font-weight: bold;
}
.td{
  color: #27263d;
  font-size: 26rpx;
  height:30rpx;
  width:54rpx;
}
.thd,.td{
  display:flex;
  align-items: center;
  justify-content: center;
  /* border: .5rpx solid #e9e9e1; */
  margin-left:10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.table-thd-disabled,.table-td-disabled{
  color: #c4cdd9;
}
.table-thd-disabled{
  background-color:#eaf0f5;
}
/* table  */
.bid{
  position: absolute;
  right: 20rpx;
  bottom: 25rpx;
  width: 108rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 24rpx;
  color: #ffffff;
  border-radius: 72rpx;
  text-align: center;
  background-color: tomato;
  box-shadow: 0rpx 0rpx 3rpx tomato;
}
.bid:active{
  opacity: .7;
}




/* addMatch */
.addMatch{
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 50rpx;
}
.addMatchBtn{
  text-align: center;
  width:300rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  background-color: goldenrod;
  color: #ffffff;
  font-size: 28rpx;
}
.addMatchBtn:active{
  opacity: .7;
}


.bid-dialog{
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
}
.dialog-mask{
  position: absolute;
  z-index: 0;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(215, 228, 245, .7);
}
.dialog-context{
  position: relative;
  z-index: 10;
  width:680rpx;
  background-color: #ffffff;
  border-radius: 30rpx;
  box-shadow: 0 0 50px #afc5e3;
  padding-bottom: 60rpx;
}
.dialog-header{
  border-bottom: 1px dashed #eaeff5;
}
.dialog-title{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  padding:10rpx 30rpx;
  /* font-weight: bold; */
  text-align: center;
}
.dialog-sub-title{
  font-size: 28rpx;
  padding:20rpx 30rpx;
}
.bid-plan{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding-right: 30rpx;
}
.optimize-btn{
  width: 200rpx;
  padding:0 20rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 72rpx;
  font-size: 32rpx;
  color: #ffffff;
  text-align: center;
  background: linear-gradient(#62da20, #41be10, #62da20);
  box-shadow: 0rpx 0rpx 6rpx #dbe6f5;
  font-weight: bold;
}
.optimize-btn:active{
  opacity: .7;
}
.dialog-match-teams{
  padding: 5rpx 30rpx;
  font-size: 24rpx;
  color: #27263d;
}